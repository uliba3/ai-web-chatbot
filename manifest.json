{
  "manifest_version": 3,
  "name": "Gemini Web Chatbot",
  "version": "1.0",
  "description": "Let's you talk with Gemini about the current web page you are on.",
  "icons": {
    "16": "google-gemini-icon.png",
    "48": "google-gemini-icon.png",
    "128": "google-gemini-icon.png"
  },
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": "google-gemini-icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["google-gemini-icon.png", "content.js", "icon.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
